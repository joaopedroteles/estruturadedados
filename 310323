int main (void){
	int agir = 5;
	int *pAgir = 0;
	//demonstração de uma troca
	printf("troca de valores teste \n\n");
	printf("Agir = %d\n",agir);
	pAgir = &agir;
	printf("*pAgir(agir)=%d\n", *pAgir);
	//primeira troca de valores
	printf("\n*pAgir = 7\n");
	*pAgir = 7;
	printf("*pAgir(agir)=%d\n", *pAgir);
	printf("Agir = %d\n",agir);
	//segunda troca
	printf("\n*pAgir = 9\n");
	agir = 9;
	printf("*pAgir: %d\n", *pAgir);
	printf("Agir: %d\n",agir);
	getch();
}


